                </TableView>
            </StackLayout>
            --><!--  BOXVIEW CLASSES --><!--
            <StackLayout>
                <Label Text="BoxView Classes" Style="{ DynamicResource SectionHeaderStyle }" />
                <BoxView StyleClass="HorizontalRule" />
                <BoxView StyleClass="Circle" />
